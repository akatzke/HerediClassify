{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "chr": {
      "type": "string"
    },
    "pos": {
      "type": "integer"
    },
    "gene": {
      "type": "string"
    },
    "ref": {
      "type": "string"
    },
    "alt": {
      "type": "string"
    },
    "variant_type": {
      "type": "array",
      "minItems" : 1,
      "items": {"type" : "string"}
    },
    "variant_effect": {
      "type": "array",
      "items": [
        {
          "type": "object",
          "properties": {
            "transcript": {
              "type": "string",
              "pattern" : "ENST[0-9]{5,15}"
            },
            "hgvs_c": {
              "type": "string",
              "pattern" : "[cC]\\.\\S+"
            },
            "hgvs_p": {
              "type": ["string", "null"],
              "pattern" : "[pP]\\.\\S+"
            },
            "variant_type": {
              "type": "array",
              "minItems": 1,
              "items": {"type" : "string"}
            },
            "exon": {
              "type": ["integer", "null"]
            },
            "intron": {
              "type" : ["integer", "null"]
            }
          },
          "required": [
            "transcript",
            "hgvs_c",
            "variant_type"
          ]
        }
      ]
    },
    "splicing_prediction_tools": {
      "type": "object",
      "properties": {
        "SpliceAI": {
          "type": "number",
          "minimum" : 0,
          "maximum" : 1
        }
      },
      "required": [
        "SpliceAI"
      ]
    },
    "pathogenicity_prediction_tools": {
      "type": "object",
      "properties": {
        "REVEL": {
          "type": "number",
          "minimum" : 0,
          "maximum" : 1
        },
        "BayesDel": {
          "type": "number",
          "minimum" : -1.29334,
          "maximum" : 0.75731
        }
      }
    },
    "gnomAD": {
      "type": "object",
      "properties": {
        "AF": {
          "type": "number",
          "minimum" : 0,
          "maximum" : 1
        },
        "AC": {
          "type": "integer",
          "minimum" : 0
        },
        "popmax": {
          "type": "string",
          "pattern" : "[A-Z]{3}"
        },
        "popmax_AF": {
          "type": "number",
          "minimum" : 0,
          "maximum" : 1
        },
        "popmax_AC": {
          "type" : "integer",
          "minimum": 0
        }
      },
      "required": [
        "AF"
      ]
    },
    "FLOSSIES": {
      "type": "object",
      "properties": {
        "AFR": {
          "type": "integer",
          "minimum" : 0
        },
        "EUR": {
          "type": "integer",
          "minimum" : 0
        }
      },
      "required": [
        "AFR",
        "EUR"
      ]
    },
    "mRNA_analysis": {
      "type" : "object",
      "properties" : {
        "performed":{
          "type": "boolean"
        },
        "pathogenic": {
          "type": "boolean"
        }
      }
    },
    "functional_data": {
      "type": "object",
      "properties" : {
        "performed" : {
          "type": "boolean"
        },
        "pathogenic": {
          "type": "boolean"
        }
      }
    },
    "prior": {
      "type": "number"
    },
    "co-occurrence": {
      "type": "number"
    },
    "segregation": {
      "type": "number"
    },
    "multifactorial_log-likelihood": {
      "type": "number"
    },
    "VUS_task_force_domain": {
      "type": "boolean"
    },
    "cancer_hotspot" : {
      "type": "boolean"
    },
    "cold_spot" :{
      "type" : "boolean"
    }
  },
  "required": [
    "chr",
    "pos",
    "gene",
    "ref",
    "alt",
    "variant_type",
    "variant_effect",
    "splicing_prediction_tools",
    "pathogenicity_prediction_tools",
    "gnomAD",
    "FLOSSIES",
    "mRNA_analysis",
    "prior",
    "co-occurrence",
    "segregation",
    "multifactorial_log-likelihood",
    "VUS_task_force_domain",
    "cancer_hotspot",
    "cold_spot"
  ]
}
