{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "chr": {
      "type": "string",
    },
    "pos": {
      "type": "integer"
    },
    "gene": {
      "type": "string"
    },
    "id": {
      "type": "string"
    },
    "ref": {
      "type": "string"
    },
    "alt": {
      "type": "string"
    },
    "variant_type": {
      "type": "string"
    },
    "variant_effect": {
      "type": "array",
      "items": [
        {
          "type": "object",
          "properties": {
            "transcript": {
              "type": "string",
              "pattern" : "ENST[0-9]{5,15}"
            },
            "hgvs_c": {
              "type": "string",
              "pattern" : "[cC]\\.\\S+"
            },
            "hgvs_p": {
              "type": ["string", "null"],
              "pattern" : "[pP]\\.\\S+"
            },
            "consequence": {
              "type": "string"
            },
            "exon": {
              "type": "integer"
            },
            "protein_domain": {
              "type" : ["string", "null"]
            }
          },
          "required": [
            "transcript",
            "hgvs_c",
            "hgvs_p",
            "consequence",
            "exon",
            "protein_domain"
          ]
        }
      ]
    },
    "VUS_task_force_domain": {
      "type": "boolean"
    },
    "spli {
      "type": "object",
      "properties": {
        "SpliceAI": {
          "type": "number",
          "minimum" : 0,
          "maximum" : 1
        },
        "MaxEntScan": {
          "type": "number",
          "minimum" : 0,
          "maximum" : 1
        },
        "HBondScore": {
          "type": "number"
        }
      },
      "required": [
        "SpliceAI",
        "MaxEntScan",
        "HBondScore"
      ]
    },
    "pathogenicity_prediction_tools": {
      "type": "object",
      "properties": {
        "REVEL": {
          "type": "number",
          "minimum" : 0,
          "maximum" : 1
        },
        "pyhloP": {
          "type": "number",
          "minimum" : -20,
          "maximum" : 30
        }
      },
      "required": [
        "REVEL",
        "pyhloP"
      ]
    },
    "gnomAD": {
      "type": "object",
      "properties": {
        "AF": {
          "type": "number",
          "minimum" : 0,
          "maximum" : 1
        },
        "popmax": {
          "type": "string",
          "pattern" : "[A-Z]{3}"
        },
        "popmax AF": {
          "type": "number",
          "minimum" : 0,
          "maximum" : 1
        }
      },
      "required": [
        "AF"
      ]
    },
    "FLOSSIES": {
      "type": "object",
      "properties": {
        "AFR": {
          "type": "integer",
          "minimum" : 0
        },
        "EUR": {
          "type": "integer",
          "minimum" : 0
        }
      },
      "required": [
        "AFR",
        "EUR"
      ]
    },
    "mRNA_analysis": {
      "type": "object",
      "properties": {
        "performed": {
          "type": "boolean"
        },
        "result": {
          "type": "boolean"
        },
        "effect_strength": {
          "type": "number"
        },
        "affected_region": {
          "type": "string"
        },
        "comment": {
          "type": "string"
        }
      },
      "required": [
        "performed"
      ]
    },
    "functional_data": {
      "type": "array",
      "items": [
        {
          "type": "object",
          "properties": {
            "assay": {
              "type": "string"
            },
            "result": {
              "type": "boolean"
            },
            "effect_strength": {
              "type": "number"
            },
            "comment": {
              "type": "string"
            }
          },
          "required": [
            "assay",
            "result",
            "effect_strength",
            "comment"
          ]
        },
      ]
    },
    "prior": {
      "type": "number"
    },
    "co-occurrence_in_trans": {
      "type": "boolean"
    }
  },
  "required": [
    "chr",
    "pos",
    "gene",
    "id",
    "ref",
    "alt",
    "variant_type",
    "variant_effect",
    "VUS_task_force_domain",
    "splicing_prediction_tools",
    "pathogenicity_prediction_tools",
    "gnomAD",
    "FLOSSIES",
    "mRNA_analysis",
    "prior",
    "co-occurrence_in_trans"
  ]
}
